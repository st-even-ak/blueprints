{namespace com.itg.plugin.confluence}
/**
*	Sets the properties of the brief
*/
{template .emailBriefProperties}
    <form id="frm" action="#" method="post" class="aui">
      	{call .labelSelectPair}
      		{param strName}varPlatform{/param}
      		{param strId}varPlatform{/param}
      		{param strLabel}{getText('com.itg.plugin.confluence.emailBriefProperties.form.varPlatform.label')}{/param}
			{{param kvps:[
				['Facebook', 'fb'],
				['LinkedIn', 'li']]
			/}}
      	{/call}
      	{call .labelInputPair}
      		{param strName}varTitle{/param}
      		{param strId}varTitle{/param}
      		{param strLabel}{getText('com.itg.plugin.confluence.emailBriefProperties.form.varTitle.label')}{/param}
      		{param strRequiredText}{getText('com.itg.plugin.confluence.emailBriefProperties.form.varTitle.required')}{/param}
      	{/call}
		{call .labelInputPair}
			{param strName}varImplementationDate{/param}
			{param strId}varImplementationDate{/param}
			{param type}date{/param}
			{param strLabel}{getText('com.itg.plugin.confluence.jobRequestProperties.form.varImplementationDate.label')}{/param}
			{param strRequiredText}{getText('com.itg.plugin.confluence.jobRequestProperties.form.varImplementationDate.required')}{/param}
		{/call}
      	{call .labelInputPair}
      		{param strName}varBudget{/param}
      		{param strId}varBudget{/param}
      		{param strLabel}{getText('com.itg.plugin.confluence.emailBriefProperties.form.varBudget.label')}{/param}
      		{param strHelpText}{getText('com.itg.plugin.confluence.emailBriefProperties.form.varBudget.helptext')}{/param}
      	{/call}
    </form>
{/template}
/**
*	Enter details of the page setup
*/
{template .emailPageSetup}
	{call .labelSelectPairBoolean}
		{param strName}swiBusinessPage{/param}
		{param strId}swiBusinessPage{/param}
		{param strLabel}{getText('com.itg.plugin.confluence.emailPageSetup.form.swiBusinessPage.label')}{/param}
	{/call}
{/template}
/**
*	Details of the content
*/
{template .emailContent}
	{call .labelInputPair}
		{param strName}varKPIs{/param}
		{param strId}varKPIs{/param}
		{param strLabel}{getText('com.itg.plugin.confluence.emailContent.form.varKPIs.label')}{/param}
		{param strHelpText}{getText('com.itg.plugin.confluence.emailContent.form.varKPIs.helptext')}{/param}
	{/call}
	{call .labelInputPair}
		{param strName}varCampaignStartDate{/param}
		{param strId}varCampaignStartDate{/param}
		{param type}date{/param}
		{param strLabel}{getText('com.itg.plugin.confluence.emailContent.form.varCampaignStartDate.label')}{/param}
		{param strHelpText}{getText('com.itg.plugin.confluence.emailContent.form.varCampaignStartDate.helptext')}{/param}
	{/call}
	{call .labelInputPair}
		{param strName}varCampaignEndDate{/param}
		{param strId}varCampaignEndDate{/param}
		{param type}date{/param}
		{param strLabel}{getText('com.itg.plugin.confluence.emailContent.form.varCampaignEndDate.label')}{/param}
		{param strHelpText}{getText('com.itg.plugin.confluence.emailContent.form.varCampaignEndDate.helptext')}{/param}
	{/call}
	{call .labelSelectPairBoolean}
		{param strName}varAssetsSupplied{/param}
		{param strId}varAssetsSupplied{/param}
		{param strLabel}{getText('com.itg.plugin.confluence.emailContent.form.varAssetsSupplied.label')}{/param}
	{/call}
	{call .labelSelectPairBoolean}
		{param strName}swiContentRequired{/param}
		{param strId}swiContentRequired{/param}
		{param strLabel}{getText('com.itg.plugin.confluence.emailContent.form.swiContentRequired.label')}{/param}
	{/call}
	{call .labelSelectPairBoolean}
		{param strName}swiCopywritingRequired{/param}
		{param strId}swiCopywritingRequired{/param}
		{param strLabel}{getText('com.itg.plugin.confluence.emailContent.form.swiCopywritingRequired.label')}{/param}
	{/call}
	{call .labelSelectPairBoolean}
		{param strName}varContentCalendarRequired{/param}
		{param strId}varAssetsSupplied{/param}
		{param strLabel}{getText('com.itg.plugin.confluence.emailContent.form.varContentCalendarRequired.label')}{/param}
	{/call}
	{call .labelInputPair}
		{param strName}varNumberOfPosts{/param}
		{param strId}varNumberOfPosts{/param}
		{param strLabel}{getText('com.itg.plugin.confluence.emailContent.form.varNumberOfPosts.label')}{/param}
		{param strHelpText}{getText('com.itg.plugin.confluence.emailContent.form.varNumberOfPosts.helptext')}{/param}
	{/call}
	{call .labelInputPair}
		{param strName}varTimingsForPosts{/param}
		{param strId}varTimingsForPosts{/param}
		{param strLabel}{getText('com.itg.plugin.confluence.emailContent.form.varTimingsForPosts.label')}{/param}
		{param strHelpText}{getText('com.itg.plugin.confluence.emailContent.form.varTimingsForPosts.helptext')}{/param}
	{/call}
{/template}
/**
*	setup and budget constraints
*/
{template .emailSetupAndBudget}
	{call .wikiForm}
  		{param strName}wikiObjectives{/param}
  		{param strId}wiki-markup-Objectives{/param}
  		{param strLabel}{getText('com.itg.plugin.confluence.emailBriefObjectives.form.wiki-markup-Objectives.label')}{/param}
      	{param strHelpText}{getText('com.itg.plugin.confluence.emailBriefObjectives.form.wiki-markup-Objectives.helptext')}{/param}
